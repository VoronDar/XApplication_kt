<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="unit"
            type="com.astery.xapplication.ui.fragments.advices.AdvicesUnit" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        tools:ignore="HardcodedText">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_frame"
            android:layout_marginEnd="@dimen/margin_frame"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question_number"
                style="@style/RoundButtonClicked"
                android:layout_gravity="center_vertical"
                android:text="@{String.valueOf(unit.order)}" />

            <TextView
                android:id="@+id/question"
                style="@style/ImportantArticleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="@{unit.question}" />

            <View
                android:id="@+id/more_details"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:background="@drawable/dating"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/answer"
            style="@style/ImportantArticleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="95dp"
            android:text="@{unit.answer}"
            android:textColor="@color/black" />

        <View
            style="@style/divider"

            android:layout_marginEnd="@dimen/margin_frame"
            android:layout_marginStart="@dimen/margin_frame"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:id="@+id/tip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_frame"
            android:layout_marginEnd="@dimen/margin_frame"
            android:orientation="vertical" />

        <!-- you should place here advices -->
        <View
            style="@style/divider"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="0dp" />

    </LinearLayout>

</layout>