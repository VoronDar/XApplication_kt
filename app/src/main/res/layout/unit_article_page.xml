<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="pos"
            type="int" />
        <variable
            name="selected"
            type="boolean" />
    </data>
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="30dp"
    android:layout_marginBottom="20dp"
    android:background="@{selected ? @drawable/round_button_selected : @drawable/round_button }"
    app:capitalizedText = "@{String.valueOf(pos)}"
    android:textColor="@{selected ? @color/onBackground : @color/page_text_deselected}"
    android:gravity="center"
    android:layout_height="30dp">

</TextView>
</layout>